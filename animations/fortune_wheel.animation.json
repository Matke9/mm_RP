{
  "format_version": "1.8.0",
  "animations": {
    "animation.fortune_wheel.spin": {
      "loop": "hold_on_last_frame",
      "animation_length": 4,
      "bones": {
        "wheel": {
          "rotation": {
            "0.0": [0, 0, 0],
            "1.25": [0, 0, 2724],
            "2.4167": [0, 0, 4235],
            "4.0": [0, 0, "4500 + (v.prize - 3) * 45"]
          }
        }
      }
    },
    "animation.fortune_wheel.stay": {
      //prevents the wheel from reseting after the spin animation
      "loop": "hold_on_last_frame",
      "animation_length": 4,
      "bones": {
        "wheel": {
          "rotation": [0, 0, "4500 + (v.prize - 3) * 45"]
        }
      }
    },
    "animation.fortune_wheel.align": {
      "loop": "hold_on_last_frame",
      "animation_length": 0.0417,
      "bones": {
        "root": {
          "rotation": [
            0,
            "(Math.round(q.body_y_rotation / 90) * 90) - q.body_y_rotation",
            0
          ]
        }
      }
    }
  }
}
